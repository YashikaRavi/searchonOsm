<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="purpleAccent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!--Text style-->
    <style name="titleText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="subtitleText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="bodyText" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/coolGrey</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="SectionTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
    </style>

    <style name="text16MediumCharcoal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="text16BookCharcoal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="text14MediumCharcoal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="text14BookCoolGrey" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/coolGrey</item>
    </style>

    <style name="text14BookCharcoal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="text14BoldSilver" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/silver</item>
    </style>

    <style name="text16BoldCharcoal" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="text14MediumGreen" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="text12BookGrey" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/coolGrey</item>
    </style>

    <style name="text12BoldCharcoalGrey" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="text12BoldTwilight" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/twilight</item>
    </style>

    <style name="SectionSubTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:fontFamily">@font/gotham_book</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="hintText" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/carcoalGrey</item>
        <item name="android:textColorHint">@color/carcoalGrey</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/carcoalGrey</item>
        <item name="colorControlActivated">@color/carcoalGrey</item>
        <item name="colorControlHighlight">@color/carcoalGrey</item>
    </style>

    <style name="error" parent="Widget.Design.TextInputLayout">
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textColor">@color/lightRed</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Tab Layout Style-->
    <style name="tabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
    </style>

    <style name="buttonTheme" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/gotham_bold</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="purpleButton" parent="buttonTheme">
        <item name="android:background">@drawable/button_purple</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="com_facebook_activity_theme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="PlacesAutocompleteThemeOverlay" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="popupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/carcoalGrey</item>
    </style>

    <style name="whiteButton" parent="buttonTheme">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="CheckboxStyle" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/carcoalGrey</item>
    </style>

<!--    Keypad custom style v2.9-->
    <style name="Keyboard" />

    <style name="Keyboard.Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/keypad_rowHeight</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Keyboard.Key">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/keypadTxtSize</item>
    </style>

<!--    Bottom sheet styles v2.9-->

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_top_white</item>
    </style>

</resources>
